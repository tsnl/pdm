mod lin_alg {

    let Vector3f = {
        x Float32,
        y Float32,
        z Float32
    };

    let vec3f (x Float32, y Float32, z Float32) Vector3f = {
        x = x,
        y = y,
        z = z
    };

    let add (vec1 Vector3f, vec2 Vector3f) Vector3f = {
        x = vec1.x + vec2.x,
        y = vec1.y + vec2.y,
        z = vec1.z + vec2.z
    };

    let scale (scalar Float32, vec Vector3f) Vector3f = {
        x = scalar * vec.x,
        y = scalar * vec.y,
        z = scalar * vec.z
    };

    let dot (vec1 Vector3f, vec2 Vector3f) Float32 = {
        vec1.x * vec2.x +
        vec1.y * vec2.y +
        vec1.z * vec2.z
    };

    let length_sqr (vec Vector3f) Float32 = {
        dot(vec, vec)
    };

};
